@using WebTask1.Models;
@{
    Layout = "~/Views/Layout/_Layout1.cshtml";

    if (IsPost)
    {
        var Title = Request["Title"];
        var User = Request["User"];

        JsonConverter jsonConverter = new JsonConverter();

        if (jsonConverter.CheckAwardInDict(Title) && jsonConverter.CheckUserInDict(User))
        {
            Award award = jsonConverter.DictOfAwards[Title];
            jsonConverter.DictOfUsers[User].AddAward(award);
            jsonConverter.WriteUsersOnFile();
            Response.Redirect("/");
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                Ошибка!
            </div>
        }
    }
}

<form method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <input name="User" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter User">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <input name="Title" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Title">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>