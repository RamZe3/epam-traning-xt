@using WebTask1.Models

@{
    Layout = "~/Views/Layout/_Layout1.cshtml";
    Page.Title = "index";
}

<form method="post">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="alert alert-secondary" role="alert">
            Приветствую, @User.Identity.Name!
        </div>
        <button id="SignOutBtn" type="button" class="btn btn-primary">Выход</button>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            Авторизируйтесь или зарегестрируйтей для работы в приложении!
        </div>
        <button id="loginBtn" type="button" class="btn btn-primary">Авторизация</button>
        <button id="registrationBtn" type="button" class="btn btn-primary">Регистрация</button>
    }

    <br /><br />

          <button id="addAwardOnUserBtn" type="button" class="btn btn-primary">Добавить награду пользователю</button>
    <button id="addAwardOnDictBtn" type="button" class="btn btn-primary">Добавить награду в список наград</button>
    <button id="delAwardOnDictBtn" type="button" class="btn btn-primary">Удалить награду</button>
    <button id="delUserOnDictBtn" type="button" class="btn btn-primary">Удалить пользователя</button>

    <br /><br />

          <button id="showUsersBtn" type="button" class="btn btn-primary">Показать пользователей</button>
          <button id="showAwardsBtn" type="button" class="btn btn-primary">Показать награды</button>

</form>



<script>
    $('#loginBtn').click(function () {
        location.href = '/Views/SignIn';
    })
</script>

<script>
    $('#SignOutBtn').click(function () {
        location.href = '/Views/SignOut';
    })
</script>

<script>
    $('#registrationBtn').click(function () {
        location.href = '/Views/Registration';
    })
</script>


<script>
    $('#addAwardOnUserBtn').click(function () {
        location.href = '/Views/AddUserAward';
    })
</script>

<script>
    $('#addAwardOnDictBtn').click(function () {
        location.href = '/Views/AddAward';
    })
</script>

<script>
    $('#delAwardOnDictBtn').click(function () {
        location.href = '/Views/DeleteAward';
    })
</script>

<script>
    $('#delUserOnDictBtn').click(function () {
        location.href = '/Views/DeleteUser';
    })
</script>

<script>
    $('#showUsersBtn').click(function () {
        location.href = '/Views/ShowUsers';
    })
</script>

<script>
    $('#showAwardsBtn').click(function () {
        location.href = '/Views/ShowAwards';
    })
</script>